<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@movie) %>
        <label class="label label-success"> Favorite </label>
      <% else %>
        <lable class="label label-warning"> Not Your Favorite </label>
      <% end %>
    </span>

    <%= link_to("Comment", new_movie_post_path(@movie), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @movie.user %>
      <%= link_to("Edit", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th> Comment  </th>
        <th> User </th>
        <th> Created at </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
