<div class="col-md-12">
  <h2 class="text-center">My Reviews</h2>

  <table class="table">
    <thead>
      <tr>
        <td> Content </td>
        <td> Movie </td>
        <td> Last Update </td>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> # </td>
          <td><%= post.content %></td>
          <td><%= post.movie.title %></td>
          <td><%= post.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
